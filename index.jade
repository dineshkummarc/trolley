!!! 5
head
  title Trolley
  meta(charset='utf-8')
  link(rel='stylesheet', href='http://twitter.github.com/bootstrap/assets/css/bootstrap.css')
  link(rel='stylesheet', href='http://twitter.github.com/bootstrap/assets/js/google-code-prettify/prettify.css')
  script(src='http://code.jquery.com/jquery.min.js')
  script(src='http://twitter.github.com/bootstrap/assets/js/google-code-prettify/prettify.js')
  script(src='https://raw.github.com/HBehrens/box2d.js/master/javascript/Box2D/box2d.min.js')
  script(src='https://raw.github.com/eirikb/trolley/master/trolley.min.js')
  script(src='main.js')
  style
    .play {
      position: absolute;
      margin-left: 0px;
      width: 300px;
      height: 200px;
    }
    pre.prettyprint {
      margin-bottom: 2px;
    }
body
  .container
    header.page-header
      h1 Trolley - Box2D utility
    for example in examples
      .row
        .span6
          pre.prettyprint.lang-js.linenums
            ol(contenteditable=true)
              li
              for line in example
                li=line
          span.label editable
          button.re-run.btn.btn-primary.btn-mini
            | Re-run
            i.icon-play.icon-white
        .span6
          button.btn.well.span5.play 
            | Run example
            i.icon-play
          canvas(width='300px', height='200px')
      hr
